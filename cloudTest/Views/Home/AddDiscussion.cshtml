@model cloudTest.Models.Discussion

<h2 class="text-center">Discussion</h2>
@using (Html.BeginForm("SaveDiscussion", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-position">
    @Html.TextBoxFor(b => b.ID, new { @class = "form-control", style = "display:none" })
    <div class="form-group w-100">
        <label for="email">Subject</label>
        @Html.TextBoxFor(b => b.Subject, new { @class = "form-control", placeholder = "Subject", id = "Subject" })
    </div>
    <div class="form-group w-100">
        <label for="email">Date</label>
        @Html.TextBoxFor(b => b.Date, new { @class = "form-control", placeholder = "Date", id = "Date", @type = "datetime-local", @Value = Model != null ? Model.Date.ToString("yyyy-MM-ddTHH:mm:ss") : "" })
    </div>
    <div class="form-group w-100">
        <label for="email">Observer</label>
        @Html.TextBoxFor(b => b.Observer, new { @class = "form-control", placeholder = "Observer", id = "Observer" })
    </div>
    <div class="form-group w-100">
        <label for="email">Location</label>
        @Html.TextBoxFor(b => b.Location, new { @class = "form-control", placeholder = "Location", id = "Location" })
    </div>
    <div class="form-group w-100">
        <label for="Coleagues">Coleagues</label>
        @Html.TextBoxFor(b => b.Coleague, new { @class = "form-control", placeholder = "Add Coleagues", data_role = "tagsinput", id = "Coleague" })
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Outcome</label>
        @Html.TextAreaFor(b => b.Outcome, new { @class = "form-control", placeholder = "Outcome", rows = "5", id = "Outcome" })
    </div>
    <button type="submit" id="submit" class="btn btn-primary submit" style="display:block; margin:auto;">Submit</button>
</div>
}